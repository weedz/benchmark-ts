{
    "include": ["./src"],
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "swc": true
    }
}
